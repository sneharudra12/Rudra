<script>
const name = "Rudra Seth";

function showWish(text){
  const wish=document.getElementById("wish");
  wish.innerHTML="ğŸ‰ Happy Birthday <b>"+name+"</b>!<br><br>"+text;
  wish.style.opacity=1;
  createConfetti();
}

function wishOne(){
  showWish("âœ¨ May your life be filled with happiness, success, and endless smiles!");
}

function wishTwo(){
  showWish("ğŸŒŸ May all your dreams come true and your future shine bright!");
}

function createConfetti(){
  for(let i=0;i<40;i++){
    const conf=document.createElement("div");
    conf.className="confetti";
    conf.style.left=Math.random()*100+"vw";
    conf.style.background=`hsl(${Math.random()*360},100%,50%)`;
    conf.style.animationDuration=(Math.random()*3+2)+"s";
    document.body.appendChild(conf);
    setTimeout(()=>conf.remove(),3000);
  }
}
</script>

